     <%= @signup_errors if @signup_errors.nil? %>
    
    <div class="row">
      <div class="input-field col s12">
        <label for="username" class="active">Username</label>
      <input id="username" type="text" name="user[name]">
      </div>
    </div>
    <div class="row">
      <div class="input-field col s12">
      <label for="password" class="active">Password</label>
      <input id="password" type="password" name="user[password]">
      </div>
    </div>
      <button class="btn waves-effect waves-light right !important" type="submit" name="action">Create Account
      </button>
  </form>
</div>
