<div class="container">
<%= @msg %>
  <h5>Login</h5>
  <form action="/hacker_news" method="post">

   <%= @login_errors %>

    <div class="row">
      <div class="input-field col s12">
        <label for="username" class="active">Username</label>
      <input id="username" type="text" name="user[name]">
      </div>
    </div>
    <div class="row">
      <div class="input-field col s12">
      <label for="password" class="active">Password</label>
      <input id="password" type="password" name="user[password]">
      </div>
    </div>
      <button class="btn waves-effect waves-light right !important" type="submit" name="action">Submit
      </button>
  </form>
</div>
<br>


<div class="container">
  <h5>Create Account</h5>
